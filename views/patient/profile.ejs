</div>
<!-- header area end -->
<!-- page title area end -->
<div class="main-content-inner">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="card card-profile">
                    <div class="card-header"></div>
                    <div class="card-body text-center">

                        <h3 class="mb-3"><%= patient.firstName %> <%= patient.lastName %></h3>

                        <p class="mb-4">
                            Citizen at <%= patient.country %>
                        </p>
                        <% if(patient.isVerified){ %>
                        <a href="#" class="btn btn-outline-success btn-sm">
                            <span class="fa fa-check"></span> Verified
                        </a>
                        <% } else { %>
                        <a href="#" class="btn btn-outline-danger btn-sm">
                            <span class="fa fa-times"></span> Not Verified
                        </a>
                        <% } %>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="media">
                            <span class="avatar avatar-xxl mr-5"
                                style="background-image: url(demo/faces/male/21.jpg)"></span>
                            <div class="media-body">
                                <h4 class="m-0">Quick Links</h4>
                                <ul class="social-links list-inline mb-0 mt-2">
                                    <li class="list-inline-item">
                                        <a href="/patientOperation">Operations</a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="/patientAllergy">Allergies</i></a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="javascript:void(0)">Disabilities</a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="javascript:void(0)">Diseases</a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="javascript:void(0)" title="" data-toggle="tooltip"
                                            data-original-title="@skypename">Bills</a>
                                    </li>
                                </ul>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Change Password</h3>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="row">
                                <div class="col-auto">
                                    <img class="avatar user-thumb" src="images/author/avatar.png" alt="avatar">
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        <label class="form-label">Old Password</label>
                                        <input type="password" class="form-control" placeholder="old password">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-label">New Password</label>
                                <input type="password" class="form-control" placeholder="type it once">
                            </div>

                            <div class="form-group">
                                <label class="form-label">Re-type New Password</label>
                                <input type="password" class="form-control" placeholder="type it again">
                            </div>

                            <div class="form-footer">
                                <button class="btn btn-primary btn-block">Update Password</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <form class="card" method="POST" action="/patients/<%=patient.id %>?_method=PUT">
                    <div class="card-header"></div>
                    <div class="card-body">
                        <h3 class="card-title">Edit Profile</h3>
                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group">
                                    <label class="form-label">Company</label>
                                    <input type="text" class="form-control" disabled="" placeholder="Company"
                                        value="Medicords">
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label class="form-label">Patient ID</label>
                                    <input type="text" name="patient[id]" class="form-control" disabled=""
                                        placeholder="PatientID" value="<%=patient.id%>">
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-4">
                                <div class="form-group">
                                    <label class="form-label">Email address</label>
                                    <input type="email" name="patient[email]" class="form-control" placeholder="Email"
                                        value="<%= patient.email %>">
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label class="form-label">First Name</label>
                                    <input type="text" class="form-control" name="patient[firstName]"
                                        placeholder="Company" value="<%= patient.firstName %>">
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Last Name</label>
                                    <input type="text" class="form-control" name="patient[lastName]"
                                        placeholder="Last Name" value="<%= patient.lastName %>">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-label">Address</label>
                                    <input type="text" class="form-control" name="patient[address]"
                                        placeholder="Home Address" value="<%= patient.address %>">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-label">Identification Number</label>
                                    <a href="javascript:void(0);" class="change-id-btn pull-right"
                                        onclick="changeID()">Change</a>
                                    <input type="text" id="id" class="form-control" placeholder="Identification Number"
                                        name="patient[identificationNumber]" disabled=""
                                        value="<%= patient.identificationNumber %>">
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label class="form-label">City</label>
                                    <input type="text" class="form-control" name="patient[city]" placeholder="City"
                                        value="<%= patient.city %>">
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Country</label>
                                    <select id="country" name="patient[country]" class="form-control">
                                        <%
                                                        for ( var i = 0; i < countryList.length; i++ )
                                                        {
                                                            var selected = ( patient.country == countryList[i].name ) ? "selected" : "";
                                                            %>
                                        <option value="<%=countryList[i].name %>" <%=selected %>>
                                            <%=countryList[i].name %></option>
                                        <%}%>
                                            </select>
                                        </div>
                                        
                                    </div>                       
                                </div>
                            </div>
                            <div class="card-footer text-right">
                                <button type="submit" class="btn btn-primary btn-block">Update Profile</button>
                            </div>
                        </form>
                    </div>
                    <!-- testimonial area end -->
                </div>
            </div>
        </div>
        <!-- main content area end -->
        <% include ./partials/footer %>
                                </div>
                                <!-- main wrapper start -->
                                <% include ./partials/offset %>
                                <% include ./partials/scripts %>
                                </body>

                                </html>