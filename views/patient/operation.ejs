<% include ./partials/header %>
<% include ./partials/medicalInfo/header %>
<!-- page title area end -->
<div class="main-content-inner">
    <div class="container">
        <div class="row">
            <!-- Progress Table start -->
            <div class="col-12 mt-5">
                <div class="card">
                    <div class="card-body">
                        <h4 class="header-title">Previous Operations</h4>
                        <div class="single-table">
                            <div class="table-responsive">
                                <table class="table table-hover progress-table text-center">
                                    <thead class="text-uppercase">
                                        <tr>
                                            <th scope="col">Operation Date</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Main Surgeon</th>
                                            <th scope="col">Days in Hospital</th>
                                            <th scope="col">Discharge Date</th>         
                                            <th scope="col">Comments</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% operations.forEach((op)=> { %>
                                        <tr>
                                            
                                            <th scope="row"><%= op.date %></th>                                          
                                            <td><%= op.name %></td>
                                            <td><%= op.doctor %></td>
                                            <td><%= op.daysInHospital %></td>
                                            <td><%= op.dischargeDate %></td>
                                            <td><%= op.comment %></td>
                                        </tr>
                                        <%}); %>
                                    </tbody>
                                    <% if(operations.length === 0) {%>
                                        <p>No operations have been recorded for you</p>
                                        <br/>
                                    <% }; %>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Progress Table end -->
        </div>
    </div>
</div>
<!-- main content area end -->
<% include ./partials/footer %>
</div>
<!-- main wrapper start -->
<% include ./partials/offset %>
<% include ./partials/scripts %>
</body>

</html>