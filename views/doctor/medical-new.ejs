<% include ./partials/header %>
<!-- header area start -->
<div class="header-area header-bottom">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-9  d-none d-lg-block">
                <div class="horizontal-menu">
                    <nav>
                        <ul id="nav_menu">
                            <li>
                                <a href="/doctor/<%=doctor.id%>/profile"><i
                                        class="ti-dashboard"></i><span>Profile</span></a>
                            </li>
                            <li>
                                <a href="/doctor/<%=doctor.id%>/patients"><i
                                        class="ti-layout-sidebar-left"></i><span>Patients</span></a>
                            </li>
                            <li class="active">
                                <a href="javascript:void(0)"><i class="ti-cloud-up"></i><span>Create</span></a>
                                <ul class="submenu">
                                    <li><a href="/doctor/<%=doctor.id%>/bill/new">Bill</a></li>
                                    <li><a href="/doctor/<%=doctor.id%>/medical/new">Medical Information</a></li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <% include ./partials/search-bar %>
            <!-- mobile_menu -->
            <div class="col-12 d-block d-lg-none">
                <div id="mobile_menu"></div>
            </div>
        </div>
    </div>
    <hr class="horizontal-menu-hr">
    </hr>
    <div class="container">
        <div class="page-title-area">
            <div class="row align-items-center">
                <div class="col-sm-6">
                    <div class="breadcrumbs-area clearfix">
                        <h4 class="page-title pull-left">Dashboard</h4>
                        <ul class="breadcrumbs pull-left">
                            <li><a href="/doctor/<%=doctor.id%>/">Home</a></li>
                            <li><span>Add Medical Information</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- header area end -->
<!-- page title area end -->
<div class="main-content-inner">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <script>
                    setPatientID = id => {
                        console.log('x: ' + document.getElementsByClassName('patientId'));
                        res = document.getElementsByClassName('patientId')
                        Array.prototype.forEach.call(res, el => {
                            // Do stuff here
                            el.value = id;
                        });
                        console.log(id);
                    }
                    calc = () => {
                        document.getElementById('total').value = document.getElementById('vat').value * document
                            .getElementById('cost').value / 100;
                    }
                </script>
                <div class="card-header"></div>

                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">1- Select Patient</h3>
                        <div class="list-group" id="list-tab" role="tablist">
                            <% patients.forEach((pa)=> { %>
                            <a class="list-group-item list-group-item-action" data-toggle="list" role="tab"
                                onclick="setPatientID('<%=pa.id%>')"><%= pa.firstName %> <%=pa.lastName%></a>
                            <% })%>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <a class="nav-item nav-link active" id="nav-operations-tab" data-toggle="tab"
                            href="#nav-operations" role="tab" aria-controls="nav-home"
                            aria-selected="true">Operations</a>
                        <a class="nav-item nav-link" id="nav-allergies-tab" data-toggle="tab" href="#nav-allergies"
                            role="tab" aria-controls="nav-profile" aria-selected="false">Allergies</a>
                        <a class="nav-item nav-link" id="nav-diseases-tab" data-toggle="tab" href="#nav-diseases"
                            role="tab" aria-controls="nav-contact" aria-selected="false">Diseases</a>
                        <a class="nav-item nav-link" id="nav-disabilities-tab" data-toggle="tab"
                            href="#nav-disabilities" role="tab" aria-controls="nav-contact"
                            aria-selected="false">Disabilities</a>
                    </div>
                </nav>
                <div class="tab-content mt-3" id="nav-tabContent">
                    <% include ./partials/medical-info/operation %>
                    <% include ./partials/medical-info/allergy %>
                    <% include ./partials/medical-info/disease %>
                    <% include ./partials/medical-info/disability %>
                </div>

            </div>
            <!-- testimonial area end -->
        </div>
    </div>
</div>
<!-- main content area end -->
<% include ./partials/footer %>
</div>
<!-- main wrapper start -->
<% include ./partials/offset %>
<% include ./partials/scripts %>
</body>

</html>