<% include ./partials/header %>
<!-- header area start -->

<div class="header-area header-bottom">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-9  d-none d-lg-block">
                <div class="horizontal-menu">
                    <nav>
                        <ul id="nav_menu">
                            <li>
                                <a href="/doctor/<%=doctor.id%>/profile"><i
                                        class="ti-dashboard"></i><span>Profile</span></a>
                            </li>
                            <li class="active">
                                <a href="/doctor/<%=doctor.id%>/patients"><i
                                        class="ti-layout-sidebar-left"></i><span>Patients</span></a>
                            </li>
                            <li>
                                <a href="javascript:void(0)"><i class="ti-cloud-up"></i><span>Create</span></a>
                                <ul class="submenu">
                                    <li><a href="/doctor/<%=doctor.id%>/bill/new">Bill</a></li>
                                    <li><a href="/doctor/<%=doctor.id%>/medical/new">Medical Information</a></li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <% include ./partials/search-bar %>
            <!-- mobile_menu -->
            <div class="col-12 d-block d-lg-none">
                <div id="mobile_menu"></div>
            </div>
        </div>
    </div>
    <hr class="horizontal-menu-hr">
    </hr>
    <div class="container">
        <div class="page-title-area">
            <div class="row align-items-center">
                <div class="col-sm-6">
                    <div class="breadcrumbs-area clearfix">
                        <h4 class="page-title pull-left">Dashboard</h4>
                        <ul class="breadcrumbs pull-left">
                            <li><a href="/doctor/<%=doctor.id%>/">Home</a></li>
                            <li><a href="/doctor/<%=doctor.id%>/patients">Patients</a></li>
                            <li><span><%= patient.firstName%> <%=patient.lastName%></span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- header area end -->
<!-- header area end -->
<!-- page title area end -->
<div class="main-content-inner">
    <div class="container">
        <div class="row">
            <script>
                changeBtn = (idName, className) => {
                    var buttonVal = $(className).text();
                    if (buttonVal === 'Change') {
                        $(className).text('Save');
                        $(idName).prop('readonly', false);
                    } else {
                        $(className).text('Change');
                        $(idName).prop('readonly', true);
                    }
                }
            </script>
            <div class="col-lg-5">
                <form class="card">
                    <div class="card-header"></div>
                    <div class="card-body">
                        <h3 class="card-title">Details &nbsp;&nbsp;
                            <% if(patient.isVerified){ %>
                            <a href="javascript:void(0)" class="btn btn-outline-success btn-sm">
                                <span class="fa fa-check"></span> Verified
                            </a>
                            <% } else { %>
                            <a href="javascript:void(0)" class="btn btn-outline-danger btn-sm">
                                <span class="fa fa-times"></span> Not Verified
                            </a>
                            <% } %>
                        </h3>
                        <div class="row">
                            <div class="col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label class="form-label">First Name</label>
                                    <input type="text" class="form-control" name="patient[firstName]"
                                        placeholder="Company" value="<%= patient.firstName %>" readonly>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Last Name</label>
                                    <input type="text" class="form-control" name="patient[lastName]"
                                        placeholder="Company" value="<%= patient.lastName %>" readonly>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Patient ID</label>
                                    <input type="text" name="patient[id]" class="form-control" readonly
                                        placeholder="patientID" value="<%=patient.id%>">
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Idenitity Card Number</label>
                                    <input type="text" id="id" class="form-control" placeholder="Identification Number"
                                        name="patient[identificationNumber]" readonly
                                        value="<%= patient.identificationNumber %>">
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Address</label>
                                    <input type="text" id="address" class="form-control" placeholder="Expiry"
                                        name="patient[address]" value="<%= patient.address %>" readonly>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Nationality</label>
                                    <input type="text" id="country" class="form-control" name="patient[country]"
                                        placeholder="Country" value="<%= patient.country %>" readonly>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                </form>
            </div>
        </div>

    </div>
    <!-- testimonial area end -->
    <!-- data table start -->
    <div class="col-lg-7">
        <div class="card">
            <div class="card-header"></div>
            <div class="card-body">
                <h3 class="card-title">History</h3>
                <script>
                    navclicked = () => {
                        console.log('hi')
                        $('#dataTable2').DataTable().responsive.recalc();
                    }
                </script>
                <!-- anchor tab start -->
                <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <a class="nav-item nav-link active" id="nav-operations-tab" data-toggle="tab"
                            href="#nav-operations" role="tab" aria-controls="nav-home"
                            aria-selected="true">Operations</a>
                        <a class="nav-item nav-link" id="nav-allergies-tab" data-toggle="tab" onclick="navclicked()"
                            href="#nav-allergies" role="tab" aria-controls="nav-profile"
                            aria-selected="false">Allergies</a>
                        <a class="nav-item nav-link" id="nav-diseases-tab" data-toggle="tab" href="#nav-diseases"
                            role="tab" aria-controls="nav-contact" aria-selected="false">Diseases</a>
                        <a class="nav-item nav-link" id="nav-disabilities-tab" data-toggle="tab"
                            href="#nav-disabilities" role="tab" aria-controls="nav-contact"
                            aria-selected="false">Disabilities</a>
                    </div>
                </nav>
                <!-- anchor tab end -->
                <div class="tab-content mt-3" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="nav-operations" role="tabpanel"
                        aria-labelledby="nav-home-tab">
                        <div class="data-tables">
                            <table id="dataTable" class="text-center table-hover">
                                <thead class="bg-light text-capitalize">
                                    <tr>
                                        <th>Date Admitted</th>
                                        <th>Name</th>
                                        <th>Doctor</th>
                                        <th>Date of Discharged</th>
                                        <th>Days in Hospital</th>
                                        <th>Comments</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% patient.operations.forEach((op)=> { %>
                                    <tr>
                                        <th scope="row"><%= op.date %></th>
                                        <td><%= op.name %></td>
                                        <td><%= op.doctor %></td>
                                        <td><%= op.dischargeDate %></td>
                                        <td><%= op.daysInHospital %></td>
                                        <td><%= op.comment %></td>
                                    </tr>
                                    <%}); %>
                                </tbody>
                                <% if(patient.operations.length === 0) {%>
                                <p>No operations have been reported</p>
                                <br />
                                <% }; %>
                            </table>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="nav-allergies" role="tabpanel" aria-labelledby="nav-profile-tab">
                        <div class="data-tables">
                            <table id="dataTable2" class="text-center table-hover">
                                <thead class="bg-light text-capitalize">
                                    <tr>
                                        <th>Date of Diagnosis</th>
                                        <th>Name</th>
                                        <th>Doctor</th>
                                        <th>Severity</th>
                                        <th>Medication</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% patient.allergies.forEach((al)=> { %>
                                    <tr>
                                        <th scope="row"><%= al.date %></th>
                                        <td><%= al.name %></td>
                                        <td><%= al.doctor %></td>
                                        <td><%= al.severity %></td>
                                        <td><%= al.medication %></td>
                                    </tr>
                                    <%}); %>
                                </tbody>
                                <% if(patient.allergies.length === 0) {%>
                                <p>No allergies have been reported</p>
                                <br />
                                <% }; %>
                            </table>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="nav-diseases" role="tabpanel" aria-labelledby="nav-contact-tab">
                        <div class="data-tables">
                            <table id="dataTable3" class="text-center table-hover">
                                <thead class="bg-light text-capitalize">
                                    <tr>
                                        <th>Date of Diagnosis</th>
                                        <th>Name</th>
                                        <th>Doctor</th>
                                        <th>Symptoms</th>
                                        <th>Medication</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% patient.diseases.forEach((di)=> { %>
                                    <tr>
                                        <th scope="row"><%= di.date %></th>
                                        <td><%= di.name %></td>
                                        <td><%= di.doctor %></td>
                                        <td><%= di.symptoms %></td>
                                        <td><%= di.medication %></td>
                                    </tr>
                                    <%}); %>
                                </tbody>
                                <% if(patient.diseases.length === 0) {%>
                                <p>No diseases have been reported</p>
                                <br />
                                <% }; %>
                            </table>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="nav-disabilities" role="tabpanel" aria-labelledby="nav-contact-tab">
                        <div class="data-tables">
                            <table id="dataTable4" class="text-center table-hover">
                                <thead class="bg-light text-capitalize">
                                    <tr>
                                        <th>Date of Diagnosis</th>
                                        <th>Name</th>
                                        <th>Doctor</th>
                                        <th>Side Effects</th>
                                        <th>Medication</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% patient.disabilities.forEach((dis)=> { %>
                                    <tr>
                                        <th scope="row"><%= dis.date %></th>
                                        <td><%= dis.name %></td>
                                        <td><%= dis.doctor %></td>
                                        <td><%= dis.sideEffects %></td>
                                        <td><%= dis.medication %></td>
                                    </tr>
                                    <%}); %>
                                </tbody>
                                <% if(patient.disabilities.length === 0) {%>
                                <p>No disabilities have been reported</p>
                                <br />
                                <% }; %>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- data table end -->
</div>
</div>
</div>
<% include ./partials/footer %>
</div>
<!-- main wrapper start -->
<% include ./partials/offset %>
<% include ./partials/scripts %>
</body>

</html>